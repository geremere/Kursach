        <Label x:Name="ProjectName" Content="Enpty new Project Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10"/>
        <TextBox x:Name="Name" Margin="163,10,-2,404.8" HorizontalAlignment="Left" Width="184"/>
